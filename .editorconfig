[*.cs]

# Default severity for all analyzer diagnostics
dotnet_analyzer_diagnostic.severity = warning

# IDE0044: Add readonly modifier
dotnet_diagnostic.IDE0044.severity = none

# Default severity for analyzer diagnostics with category 'Style'
dotnet_analyzer_diagnostic.category-Style.severity = none

# UNT0013: Remove invalid SerializeField attribute
dotnet_diagnostic.UNT0013.severity = none

# Default severity for analyzer diagnostics with category 'CodeQuality'
dotnet_analyzer_diagnostic.category-CodeQuality.severity = warning

# IDE0051: Remove unused private members
dotnet_diagnostic.IDE0051.severity = silent

# Default severity for analyzer diagnostics with category 'TypeSafety'
dotnet_analyzer_diagnostic.category-TypeSafety.severity = suggestion
